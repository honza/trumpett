<RelativeLayout 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="#ffffff">
	
	
	
	<TextView 
		android:layout_height="wrap_content" 
		android:id="@+id/compose_text" 
		android:text="@string/compose_text_str" 
		android:layout_width="fill_parent">
	</TextView>
	
	


<EditText android:layout_height="wrap_content" android:layout_below="@+id/compose_text" android:id="@+id/tweet" android:layout_width="fill_parent" android:lines="3"></EditText>
<Button android:layout_height="wrap_content" android:layout_below="@+id/tweet" android:layout_width="wrap_content" android:id="@+id/send_tweet_button" android:text="@string/send_tweet"></Button>
</RelativeLayout>
